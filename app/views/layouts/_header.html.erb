<% if current_user %>
<header class="navbar navbar-fixed-top">
  <div class="container">
    <div class="row">
      <div class= "col-md-2">
        <%= link_to "InstaApp",root_path, id: "logo" %>
      </div>
      <div class= "search col-md-8">
        <%= search_form_for @q do |f| %>
          <%= f.search_field :name_cont, placeholder: "検索", class: 'form-control' %>
        <% end %>
      </div>
      <div class="col-md-2 icon">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to fa_icon("eye"), users_path, style: 'color:#000;' %></li>
            <li><%= link_to fa_icon("user"), current_user, style: 'color:#000;' %></li>
            <li><%= link_to fa_icon("sign-out"), destroy_user_session_path , method: :delete, style: 'color:#000;' %></li>
          </ul>
      </div>
    </div>
  </div>
</header>
<% end %>
