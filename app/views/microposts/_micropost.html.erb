<li id= "micropost-<%= micropost.id %>">
  <span>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <div>
    <% if current_user %>
      <%= link_to "削除する", micropost, method: :delete,
                                        data: { confirm: "この写真を本当に削除しますか？"} %>
    <% end %>
  </div>
</li>
