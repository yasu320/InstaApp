<div id="logo">
  <h1>InstaApp</h1>
</div>

<div class="row">
  <div class= "col-md-6 col-md-offset-5">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= bootstrap_devise_error_messages! %>

      <div class="form-group">
        <%= f.label :name, style: 'display: none;' %>
        <%= f.text_field :name, autofocus: true, autocomplete: 'name', :placeholder => "フルネーム", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :username, style: 'display: none;' %>
        <%= f.text_field :username, autofocus: true, autocomplete: 'username', :placeholder => "ユーザーネーム", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, style: 'display: none;' %>
        <%= f.password_field :password, autocomplete: 'current-password', :placeholder => "パスワード", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit "ログイン", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
