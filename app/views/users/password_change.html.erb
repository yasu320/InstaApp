<h1>パスワードを変更</h1>


<div class="row">
  <div class= "col-md-6 col-md-offset-4">

    <%= form_for(@user, :url => { :action => "update_password" } ) do |f| %>

      <div class="form-group row">
        <%= f.label :current_password, "現在のパスワード", class: 'col-sm-2 col-form-label col-form-label-lg' %>
        <div class="col-sm-10">
          <%= f.password_field :current_password, class: 'form-control form-control-lg' %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, "新しいパスワード", class: 'col-sm-2 col-form-label col-form-label-lg' %>
        <div class="col-sm-10">
          <%= f.password_field :password, :autocomplete => "off", class: 'form-control form-control-lg' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password_confirmation, "新しいのパスワードの確認", class: 'col-sm-2 col-form-label col-form-label-lg' %>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, class: 'form-control form-control-lg' %>
        </div>
      </div>
      <div class="action_container update">
        <%= f.submit "パスワードを変更",  class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
<br />

      <div class="form-group col-md-6 col-md-offset-5">
        <%= link_to('プロフィールを編集', edit_user_path ) %>
      </div>
