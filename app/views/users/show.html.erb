<% provide(:title, @user.username + "さん") %>
<aside>
  <section class="info">
    <h1><%= link_to @user.username, user_path, style: "color:#000; text-decoration: none;" %></h1>
    <h2><%= @user.name %></h2>
    <%= render 'follow_form' if user_signed_in? %>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <h2><%= @user.profile %></h2>
    <% unless @user.link.nil? %>
      <%= link_to @user.link, @user.link, target: "_blank" %>
    <% end %>
    <% if @user == current_user  %>
      <h2><%= link_to('プロフィールを編集', edit_user_path) %></h2>
    <% end %>
  </section>
</aside>
<div>
  <% if @user.microposts.any? %>
    <ol class= "show_microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
  <% end %>
</div>
